<Window x:Class="HotelOrigin.CustomerList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelOrigin"
        mc:Ignorable="d"
        Title="CustomerList" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="gridCustomerNo2" Margin="10,57,10,10" Grid.ColumnSpan="2" SelectionChanged="gridCustomerNo2_SelectionChanged" SelectionMode="Single"/>
        <Button x:Name="buttonAddCustomer" Content="Add Customer" Margin="10,10,33,0" VerticalAlignment="Top" Height="42" Click="buttonAddCustomer_Click"/>
        <Button x:Name="buttonRemoveCustomer" Content="Remove Customer" Margin="33,10,10,0" Grid.Column="1" Click="buttonRemoveCustomer_Click" Height="42" VerticalAlignment="Top"/>

    </Grid>
</Window>
